<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/study_frame"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/study_resource_image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:alpha="0"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/resource_cover"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:alpha="1"
            />

    </FrameLayout>


    <TextView
        android:id="@+id/home_recent_study_resource_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/study_frame"
        app:layout_constraintTop_toTopOf="@id/study_frame"
        app:layout_constraintBottom_toBottomOf="@id/study_frame"
        android:gravity="center_vertical"
        android:text="安全守则"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:textColor="#BF000000"
        />

    <ImageView
        android:id="@+id/study_resource_image1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/study_frame"
        app:layout_constraintBottom_toBottomOf="@id/study_frame"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrow_right"
        android:alpha="0.4"
        />

    <TextView
        android:background="#81919191"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/study_frame"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>