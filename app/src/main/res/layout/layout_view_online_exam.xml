<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/exam_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text=""
        />

    <TextView
        android:id="@+id/exam_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exam_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/exam_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exam_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/exam_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exam_b"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/exam_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exam_c"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/question_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exam_d"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="正确答案:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/question_yours_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/question_correct_answer"
        app:layout_constraintBottom_toBottomOf="@id/question_correct_answer"
        app:layout_constraintLeft_toRightOf="@id/question_correct_answer"
        android:text="你的答案:"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>