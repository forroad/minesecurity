<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/home_toolbar_layer">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="18sp"
                    android:textColor="#BF000000"/>
<!--                <ImageView-->
<!--                    android:layout_width="12dp"-->
<!--                    android:layout_height="8dp"-->
<!--                    android:background="@drawable/arrow_down"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_marginLeft="8dp"-->
<!--                    />-->
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_title"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/home_search_style"
        android:hint="找资料"
        android:gravity="center"
        android:textSize="18sp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_search"
        app:layout_constraintRight_toLeftOf="@id/home_random_traning"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp">

        <ImageView
            android:id="@+id/home_training_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_home_course"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_training_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_training_image"
            android:text="培训安排"
            android:textColor="#BF000000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_random_traning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_search"
        app:layout_constraintLeft_toRightOf="@id/home_training"
        app:layout_constraintRight_toLeftOf="@id/home_virtual_exam"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        >

        <ImageView
            android:id="@+id/home_random_traning_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_home_source"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_random_traning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_random_traning_image"
            android:text="随机练习"
            android:textColor="#BF000000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_virtual_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_search"
        app:layout_constraintLeft_toRightOf="@id/home_random_traning"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp">

        <ImageView
            android:id="@+id/home_virtual_exam_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_home_exam"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_virtual_exam_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_virtual_exam_image"
            android:text="在线模考"
            android:textColor="#BF000000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_recent_study_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_training"
        android:layout_marginTop="20dp"
        android:background="#C9E7E7E7">


        <TextView
            android:id="@+id/home_recent_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:text="最近学习"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            />

<!--        <ImageView-->
<!--            android:id="@+id/home_recent_study_image"-->
<!--            android:layout_width="28dp"-->
<!--            android:layout_height="28dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            android:background="@drawable/arrow_right"-->
<!--            android:paddingVertical="8dp"-->
<!--            android:paddingRight="30dp"-->
<!--        />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_recent_study_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_recent_study_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/home_recent_study_resource_image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/security"
            android:padding="30dp"
            />

        <TextView
            android:id="@+id/home_recent_study_resource_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/home_recent_study_resource_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:text="安全守则"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:textColor="#BF000000"
            />

        <ImageView
            android:id="@+id/home_recent_study_resource_image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right"
            android:alpha="0.4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_recent_study_resource1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_recent_study_resource"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/home_recent_study_resource1_image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/security1"
            android:padding="30dp"
            />

        <TextView
            android:id="@+id/home_recent_study_resource1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/home_recent_study_resource1_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:text="矿山安全管理守则"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:textColor="#BF000000"
            />

        <ImageView
            android:id="@+id/home_recent_study_resource1_image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right"
            android:alpha="0.4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_recent_study_resource1"
        android:layout_marginTop="20dp"
        android:background="#C9E7E7E7">


        <TextView
            android:id="@+id/home_information_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:text="通知信息"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            />

        <!--        <ImageView-->
        <!--            android:id="@+id/home_recent_study_image"-->
        <!--            android:layout_width="28dp"-->
        <!--            android:layout_height="28dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintRight_toRightOf="parent"-->
        <!--            android:background="@drawable/arrow_right"-->
        <!--            android:paddingVertical="8dp"-->
        <!--            android:paddingRight="30dp"-->
        <!--        />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_information_one"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_information"
        >

        <TextView
            android:id="@+id/information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="关于矿山安全管理的第二次通知"
            android:textColor="#BF000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:text="2019-10-13"
            />

        <TextView
            android:background="#81919191"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_information_two"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_information_one"
        >

        <TextView
            android:id="@+id/two_nformation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="关于矿山安全管理的第三次通知"
            android:textColor="#BF000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/two_information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:text="2019-10-13"
            />

        <TextView
            android:background="#81919191"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
